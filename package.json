{
    "name": "jway",
    "displayName": "JWAY Tools",
    "description": "JXML Formatting",
    "version": "0.0.3",
    "publisher": "taenito",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/Extension",
    "activationEvents": [
        "onLanguage:jxml"
    ],
    "contributes": {
        "languages": [
            {
                "id": "jxml",
                "aliases": [
                    "Jxml",
                    "jxml"
                ],
                "extensions": [
                    "jxml"
                ],
                "configuration": "./languages/jxml/jxml.json",
                "firstLine": "(\\<\\?xml.*)|(\\<svg)|(\\<\\!doctype\\s+svg)"
            }
        ],
        "grammars": [
            {
                "language": "jxml",
                "scopeName": "text.jxml",
                "path": "./languages/jxml/jxml.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "JWAY Tools Configuration",
            "type": "object",
            "properties": {
                "jwayTools.removeCommentsOnMinify": {
                    "type": "boolean",
                    "default": false,
                    "description": "Remove comments when JXML is minified."
                },
                "jwayTools.splitXmlnsOnFormat": {
                    "type": "boolean",
                    "default": true,
                    "description": "Put each xmlns attribute on a new line when fromatting JXML."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.2",
        "colors": "^1.3.2",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.21"
    }
}
